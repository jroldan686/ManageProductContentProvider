<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Preference category">

        <SwitchPreference
            android:defaultValue="false"
            android:title="@string/pref_rememberuser_title"
            android:key="rememberuser"
            android:summary="@string/pref_rememberuser_summary"/>
    </PreferenceCategory>
    <EditTextPreference
        android:defaultValue="Default value"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_user_title"
        android:key="user" />
    <EditTextPreference
        android:defaultValue="Default value"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_password_summary"
        android:key="password" />
</PreferenceScreen>